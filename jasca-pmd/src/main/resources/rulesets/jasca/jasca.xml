	<!-- =================================================================== -->
	
	<rule name="MainMethodInJavaEEObject"
		language="java"
		since="jasca 1.0"
		message="디버깅을 위해 작성 되었던 {0} 메소드를 제거하십시오"
		class="net.sourceforge.pmd.lang.rule.XPathRule"
		externalInfoUrl="http://cwe.mitre.org/data/definitions/489.html">
		
		<description>
		</description>
		<priority>3</priority>
		<properties>
			<property name="xpath">
				<value>
<![CDATA[
//ClassOrInterfaceDeclaration
/ExtendsList
/ClassOrInterfaceType[@Image="HttpServlet" or @Image = "Filter"]
/../..
/ClassOrInterfaceBody
/ClassOrInterfaceBodyDeclaration
/MethodDeclaration[@Public = "true" and @Static = "true" and @Void = "true"]
/MethodDeclarator[
  @Image = "main"
  and
  (.//FormalParameter
    /Type[@Array = "true"]
    /ReferenceType
    /ClassOrInterfaceType[@Image = "String"]
  )
]
]]>
				</value>
			</property>
		</properties>
		<example>
<![CDATA[
]]>
		</example>
	</rule>
	
</ruleset>
